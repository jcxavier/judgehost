localstatedir  = @localstatedir@
libdir         = @libdir@
includedir     = @includedir@
oldincludedir  = @oldincludedir@
datarootdir    = @datarootdir@
datadir        = @datadir@
infodir        = @infodir@
localedir      = @localedir@
mandir         = @mandir@
docdir         = @docdir@
htmldir        = @htmldir@
dvidir         = @dvidir@
pdfdir         = @pdfdir@
